<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackGround"
    tools:context=".Fragment.FindDonorFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/bloodView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/aPossitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:text="A+"
            android:gravity="center"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/aNegetive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:text="A-"
            android:gravity="center"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/aPossitive"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bPossitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:text="B+"
            android:gravity="center"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/aNegetive"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bNegetive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:text="B-"
            android:gravity="center"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/bPossitive"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/oPossitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:text="O+"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/bNegetive"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/oNegetive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:text="O-"
            android:gravity="center"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/oPossitive"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bloodView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:elevation="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/bloodView">

        <TextView
            android:id="@+id/abPossitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:text="AB+"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/bNegetive"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/abNegetive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:text="AB-"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/oPossitive"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/searchBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edittext"
        android:drawableRight="@drawable/search"
        android:drawablePadding="20dp"
        android:ems="10"
        android:layout_margin="10dp"
        android:hint="search through districts! e.g.Dhaka"
        android:imeOptions="actionNext"
        android:inputType="textAutoComplete"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/bloodView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/thirdSpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_edittext"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBox"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/demoRvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Search Result :"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.050"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdSpin" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/donorRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@+id/demoRvText"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/donor_list"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>